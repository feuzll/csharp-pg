using BrightIdeasSoftware;

namespace ue_pak;

public partial class Form1 : Form
{
    public Form1()
    {
        InitializeComponent();
        OLVColumn titleColumn = new OLVColumn();
        titleColumn.Text = "Title"; // where generics for aspects though?
        titleColumn.AspectGetter = (x) => (x as pakEntry).Title;
        titleColumn.Width = 100;
        

        ObjectListView olvView = new ObjectListView
        {
            Size = new Size(500, 500),
            View = View.Details,
            ShowGroups = false
        };

        olvView.Columns.Add(titleColumn);

        List<pakEntry> list = new List<pakEntry>();
        for (int i = 0; i < 3; i++)
        {
            var entry = new pakEntry();
            entry.Title = "item" + i;
            list.Add(entry);
        }

        
        this.Controls.Add(olvView);
        olvView.AddObjects(list);
    }
}

public class pakEntry
{
    public string Title {get; set;}
    public int size;
}
